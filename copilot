<body>

    <h1>Try to Click the Pixel! ðŸŽ¯</h1>
    <p>It's tiny, it moves, and it disappears fast. Good luck!</p>
    <div id="pixel"></div>

    <script>
        let pixel = document.getElementById("pixel");

        function movePixel() {
            pixel.style.left = `${Math.random() * window.innerWidth}px`;
            pixel.style.top = `${Math.random() * window.innerHeight}px`;
        }

        function vanishPixel() {
            pixel.style.display = "none";
            setTimeout(() => pixel.style.display = "block", 2000);
            movePixel();
        }

        pixel.addEventListener("click", () => {
            alert("YOU GOT IT! ðŸŽ‰");
            movePixel();
        });

        setInterval(vanishPixel, 1000);
        movePixel();
    </script>

